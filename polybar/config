[colours]
white = #e8e8e8
blue = #81a1c1
nord = #2E3440

[global/wm]
margin-top = 5
margin-bottom = 5

[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/top]
monitor = ${env:MONITOR}

width = 100%
height = 32
radius = 0.0
fixed-center = true
padding = 3
module-margin = 1

background = ${colours.nord}

border-size = 0
border-bottom-size = 0

font-0 = Inconsolata:size=11:weight=Regular;1
font-1 = Material Icons:antialia=false:size=12;3

wm-restack = i3
modules-left = i3
modules-center = date
modules-right = prevsong playpause nextsong music pavolume

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = false
enable-click = true
enable-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colours.white}
label-mode-background = ${colours.blue}

label-focused-foreground = ${colours.white}
label-focused-background = ${colours.blue}
label-focused-underline = #fba922
label-focused-padding = 4

label-unfocused-foreground = ${colours.white}
label-unfocused-padding = 4

label-visible-underline = #555555
label-visible-padding = 4

label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4

[module/music]
type = custom/script
interval = 1
label = %{T4}%output:0:90:...%%{T-}
tail = true
exec = ~/.config/polybar/mpris.sh

[module/playpause]
type = custom/script
label = %output%
tail = false
interval = 1
exec = ~/.config/polybar/playpause.sh
click-left = playerctl play-pause

[module/nextsong]
type = custom/text
content = "%{F#17a086}"
click-left = playerctl next

[module/prevsong]
type = custom/text
content = "%{F#17a086}"
click-left = playerctl previous

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format = <label-mode> <label-state> <label-mode>
label-mode = %mode%
label-mode-padding = 4
label-mode-foreground = ${colours.white}
label-mode-background = ${colours.blue}

label-focused = %icon%
label-focused-foreground = ${colours.white}
label-focused-background = #3f3f3f
label-focused-underline = #fba922
label-focused-padding = 4

label-unfocused = %icon%
label-unfocused-foreground = ${colours.white}
label-unfocused-padding = 4

label-visible = %icon%
label-visible-underline = #555555
label-visible-padding = 4

label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4

[module/date]
type = internal/date
format = " <label> "
label = %date%
date = %{F#259e83} %{F#e8e8e8}%a %b %d %{F#e8e8e8}%l:%M %p
label-font = 0

[module/pavolume]
type = custom/script
tail = true
label = " %output% "
exec = ~/.config/polybar/pavolume.sh --listen
click-left = amixer -D pulse sset Master toggle
click-right = exec pavucontrol &
scroll-up = amixer -D pulse sset Master 2%+
scroll-down = amixer -D pulse sset Master 2%-

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
format-muted = <label-muted>
label-muted-foreground = #66
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = #027AB6

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh %artist% - %title%
tail = true
interval = 2

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
